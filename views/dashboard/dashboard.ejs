<!DOCTYPE html>
<html data-bs-theme="light" lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Untitled2</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css">
    <link rel="stylesheet" href="./assets/css/styles.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-md bg-body py-3">
        <div class="container"><a class="navbar-brand d-flex align-items-center" href="#"><span class="bs-icon-sm bs-icon-rounded bs-icon-primary d-flex justify-content-center align-items-center me-2 bs-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="-96 0 512 512" width="1em" height="1em" fill="currentColor">
                        <!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) Copyright 2023 Fonticons, Inc. -->
                        <path d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z"></path>
                    </svg></span><span>FB Job</span></a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" href="#">Hello <%= name %></a></li>
                </ul><a class="btn btn-light" type="button" href="form" style="margin-right: 20px;">Create New Post</a><a class="btn btn-primary" href="/log_out" type="button"><i class="icon-logout"></i></a>
            </div>
        </div>
    </nav>
    <div class="container py-4 py-xl-5">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2>Your Job Posts</h2>
            </div>
        </div>
        <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3">
            <!------------------------------------------>
            <% posts.forEach(function(post) { %>
                <div class="col">
                    <div class="card">
                        <%if(post.image_url!=null){ %>
                            <img class="card-img-top w-100 d-block fit-cover" style="height: 200px;" src=<%=post.image_url%>  width="334" height="200">
                        <% }else{ %>
                            <img class="card-img-top w-100 d-block fit-cover" style="height: 200px;" src="https://cdn.bootstrapstudio.io/placeholders/1400x800.png" width="334" height="200">
                        <% } %>
                        <div class="card-body p-4">
                            <p class="text-primary card-text mb-0"><%=post.title%></p>
                            <h4 class="card-title"><%= post.role %></h4>
                            <p class="card-text"><%= post.description %></p>
                            <div class="d-flex">
                                <button class="btn btn-danger" type="button" onclick="post(<%=post.id %>)" style="width: 70.6px;padding-right: 0px;padding-left: 0px;padding-top: 0px;padding-bottom: 0px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor" style="font-size: 38px;">
                                        <path d="M0 0h24v24H0V0z" fill="none"></path>
                                        <path d="M16 9v10H8V9h8m-1.5-6h-5l-1 1H5v2h14V4h-3.5l-1-1zM18 7H6v12c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7z"></path>
                                    </svg>
                                </button>
                                <div>
                                    <p class="fw-bold mb-0" style="margin-left: 10px;"><%=post.status%></p>
                                    <p class="text-muted mb-0" style="margin-left: 10px;"><%=post.created_at%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
            
            <!------------------------------------------>
            </div>
        </div>
    </div>
    <script>
        function post(id) {
            console.log(id);
            fetch(`/delete_post/${id}`, {
                method: 'DELETE'
            })
            .then(response => {
                if (!response.ok) {
                    // Handle successful deletion
                    console.log('Failed to delete post');
                }else{
                    location.reload();
                }
            })
            .catch(error => {
                // Handle network error
                console.log('Network error occurred');
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>